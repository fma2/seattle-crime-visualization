    <div id="map-canvas"></div>
     <div id="panel">
      <ul class="stack-for-small round secondary button-group">
        <li><a onclick="toggleHeatmap()" class="tiny button">Toggle Heatmap</a></li>
        <li><a onclick="changeGradient()" class="tiny button">Change Heatmap gradient</a></li>
        <li><a onclick="changeRadius()" class="tiny button">Change Heatmap radius</a></li>
        <li><a onclick="changeOpacity()" class="tiny button">Change Heatmap opacity</a></li>
        <li><a onclick="dropPointsonMap()" class="tiny button">Add incidents information</a></li>
      </ul>
    </div>
  </div>
</div>


